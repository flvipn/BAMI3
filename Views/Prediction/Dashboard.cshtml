@model DashboardViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard predicții";
}

<h2>Dashboard predicții</h2>

<form method="get" asp-action="Dashboard" class="row g-3 mb-4 p-3 bg-light border rounded">
    <div class="col-md-3">
        <label class="form-label fw-bold">De la data</label>
        <input type="date" name="fromDate" class="form-control"
               value="@(Model.FromDate?.ToString("yyyy-MM-dd") ?? "")" />
    </div>
    <div class="col-md-3">
        <label class="form-label fw-bold">Până la data</label>
        <input type="date" name="toDate" class="form-control"
               value="@(Model.ToDate?.ToString("yyyy-MM-dd") ?? "")" />
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-filter"></i> Filtrează
        </button>
    </div>
    <div class="col-md-2 align-self-end">
        <a asp-action="Dashboard" class="btn btn-secondary w-100">Resetează</a>
    </div>
</form>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-bg-primary mb-3 h-100">
            <div class="card-body">
                <h5 class="card-title">Număr total de predicții</h5>
                <p class="card-text">în intervalul selectat</p>
                <p class="card-text display-6 fw-bold">@Model.TotalPredictions</p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3 h-100">
            <div class="card-body">
                <h5 class="card-title">Preț mediu per tip de plată</h5>
                <div class="table-responsive">
                    <table class="table table-sm mb-0 table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Tip plată</th>
                                <th>Număr predicții</th>
                                <th>Preț mediu ($)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PaymentTypeStats.Any())
                            {
                                @foreach (var item in Model.PaymentTypeStats)
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">@item.PaymentType</span></td>
                                        <td>@item.Count</td>
                                        <td>@item.AveragePrice.ToString("0.00")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Nu există date pentru filtrul selectat.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Distribuția prețurilor prezise</h5>
                <canvas id="priceChart" style="max-height: 400px;"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Pregătim datele pentru grafic din Model.PriceBuckets
        const labels = @Html.Raw(JsonSerializer.Serialize(Model.PriceBuckets.Select(b => b.Label)));
        const dataValues = @Html.Raw(JsonSerializer.Serialize(Model.PriceBuckets.Select(b => b.Count)));

        const ctx = document.getElementById('priceChart').getContext('2d');
        const priceChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Număr de predicții',
                    data: dataValues,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Număr predicții'
                        },
                        ticks: {
                            stepSize: 1
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Interval preț (unitatea modelului)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
}